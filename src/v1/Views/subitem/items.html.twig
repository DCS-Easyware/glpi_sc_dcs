        <th>{{ translation.inventaire_number }}</th>
      </tr>
    </thead>
    <tbody>
      {% for key,item in data.items %}
        <tr>
          <td>{{ item.type }}</td>
          <td>
            {% if item.url != '' %}
                <a href="{{ item.url }}">{{ item.name }}</a>
            {% else %}
                {{ item.name }}
            {% endif %}
          </td>
          <td>{{ item.entity }}</td>
          <td>{{ item.serial_number }}</td>
          <td>{{ item.inventaire_number }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

