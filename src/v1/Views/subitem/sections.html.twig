{{ include('header.html.twig') }}
{{ include('headerForm.html.twig') }}

{% if data.src == 'question' %}
  <table class="ui blue table">
    <thead>
      <tr>
        <th>{{ translation.name }}</th>
      </tr>
    </thead>
    <tbody>
      {% for section in data.sections %}
        <tr>
          <td><a href="{{ data.rootUrl2 }}/sections/{{ section.id }}">{{ section.name }}</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

{% if data.src == 'form' %}
  <table class="ui blue table">
    <thead>
      <tr>
        <th>{{ translation.section }}</th>
        <th>{{ translation.nb_questions }}</th>
      </tr>
    </thead>
    <tbody>
      {% for section in data.sections %}
        <tr>
          <td><a href="{{ data.rootUrl2 }}/sections/{{ section.id }}">{{ section.name }}</a></td>
          <td>{{ section.questions_count }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}

